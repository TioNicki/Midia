
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isModerator() {
      return isSignedIn() && get(/databases/$(database)/documents/app_users/$(request.auth.uid)).data.role == 'moderator';
    }

    function isAdmin() {
      return isSignedIn() && (
        get(/databases/$(database)/documents/app_users/$(request.auth.uid)).data.role == 'admin' ||
        get(/databases/$(database)/documents/app_users/$(request.auth.uid)).data.role == 'moderator'
      );
    }

    match /app_users/{appUserId} {
      allow get: if isOwner(appUserId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(appUserId);
      
      // Apenas moderadores podem mudar roles ou status de terceiros.
      // Ninguém pode mudar seu próprio role para evitar auto-remoção de poder.
      allow update: if (isModerator() && request.resource.data.id == resource.data.id && request.auth.uid != appUserId) || 
                   (isOwner(appUserId) && request.resource.data.role == resource.data.role) ||
                   (!exists(/databases/$(database)/documents/app_users/$(appUserId)) && isOwner(appUserId));
      
      allow delete: if isModerator() && request.auth.uid != appUserId;
    }

    match /worship_services/{serviceId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /praise_songs/{songId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /duty_roles/{roleId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /duty_rosters/{rosterId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
      
      match /duty_assignments/{assignmentId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
      }
    }

    match /important_dates/{dateId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /feedback/{feedbackId} {
      allow get, list: if isAdmin();
      allow create: if isSignedIn();
      allow update, delete: if isModerator();
    }
  }
}
