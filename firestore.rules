
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      // Permite acesso se o usuário for admin OU se o documento de perfil ainda não existir (para o primeiro cadastro)
      return isSignedIn() && (
        !exists(/databases/$(database)/documents/app_users/$(request.auth.uid)) || 
        get(/databases/$(database)/documents/app_users/$(request.auth.uid)).data.role == 'admin'
      );
    }

    match /app_users/{appUserId} {
      allow get: if isOwner(appUserId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(appUserId);
      allow update: if (isOwner(appUserId) && request.resource.data.role == resource.data.role) || isAdmin();
      allow delete: if isAdmin();
    }

    match /worship_services/{serviceId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /praise_songs/{songId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /duty_roles/{roleId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /duty_rosters/{rosterId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
      
      match /duty_assignments/{assignmentId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
      }
    }

    match /important_dates/{dateId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /feedback/{feedbackId} {
      allow get, list: if isAdmin();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin();
    }
  }
}
