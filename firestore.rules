
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/app_users/$(request.auth.uid)).data;
    }

    function isModerator() {
      return isSignedIn() && getUserData().role == 'moderator';
    }

    function isAdmin() {
      return isSignedIn() && (getUserData().role == 'admin' || getUserData().role == 'moderator');
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /app_users/{appUserId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow create: if isSignedIn();
      
      // Permitir que usuários atualizem seu próprio perfil (nome, etc), mas não seu cargo.
      // Moderadores podem tudo em terceiros, exceto deletar a si mesmos.
      allow update: if isModerator() || 
                   (isOwner(appUserId) && request.resource.data.role == resource.data.role);
      
      allow delete: if isModerator() && request.auth.uid != appUserId;
    }

    match /praise_songs/{songId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /duty_roles/{roleId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /duty_rosters/{rosterId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /important_dates/{dateId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /feedback/{feedbackId} {
      allow get, list: if isAdmin();
      allow create: if isSignedIn();
      allow update, delete: if isModerator();
    }
  }
}
