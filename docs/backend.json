
{
  "entities": {
    "AppUser": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "AppUser",
      "type": "object",
      "description": "Represents a user within the Atos Multim√≠dia application. Roles determine access level: moderator (super-user), admin (content manager), member (standard access).",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the AppUser entity."
        },
        "externalAuthId": {
          "type": "string",
          "description": "The unique identifier for the user from Firebase Authentication."
        },
        "name": {
          "type": "string",
          "description": "The display name of the user."
        },
        "email": {
          "type": "string",
          "description": "The email address of the user.",
          "format": "email"
        },
        "role": {
          "type": "string",
          "description": "The role level of the user.",
          "enum": ["moderator", "admin", "member"]
        },
        "status": {
          "type": "string",
          "description": "The approval status of the user ('pending', 'approved').",
          "enum": ["pending", "approved"]
        },
        "lastProfileUpdate": {
          "type": "string",
          "description": "ISO timestamp of the last time the user updated their profile name.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "externalAuthId",
        "name",
        "email",
        "role",
        "status"
      ]
    },
    "PraiseSong": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "PraiseSong",
      "type": "object",
      "description": "Stores details about a praise song.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier."
        },
        "title": {
          "type": "string",
          "description": "Song title."
        },
        "artist": {
          "type": "string",
          "description": "Original artist."
        },
        "lyrics": {
          "type": "string"
        },
        "notes": {
          "type": "string"
        }
      },
      "required": ["id", "title", "artist", "lyrics"]
    },
    "DutyRole": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "DutyRole",
      "type": "object",
      "description": "Defines functions within the media group (e.g., Camera, Switcher).",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" }
      },
      "required": ["id", "name"]
    },
    "DutyRoster": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "DutyRoster",
      "type": "object",
      "description": "Schedule of duties with user assignments.",
      "properties": {
        "id": { "type": "string" },
        "date": { "type": "string", "format": "date" },
        "description": { "type": "string" },
        "assignments": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "userId": { "type": "string" },
              "userName": { "type": "string" },
              "roleId": { "type": "string" },
              "roleName": { "type": "string" }
            }
          }
        },
        "songIds": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of song IDs associated with this service."
        }
      },
      "required": ["id", "date", "description"]
    },
    "ImportantDate": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "ImportantDate",
      "type": "object",
      "description": "Community events.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "location": { "type": "string" }
      },
      "required": ["id", "title", "description", "date"]
    },
    "Feedback": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Feedback",
      "type": "object",
      "description": "User feedback.",
      "properties": {
        "id": { "type": "string" },
        "type": { "type": "string" },
        "message": { "type": "string" },
        "submittedByUserId": { "type": "string" },
        "submissionDateTime": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "type", "message", "submittedByUserId", "submissionDateTime"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/app_users/{appUserId}": {
      "schema": "#/backend/entities/AppUser",
      "description": "User profiles and roles."
    },
    "/praise_songs/{praiseSongId}": {
      "schema": "#/backend/entities/PraiseSong",
      "description": "Song bank."
    },
    "/duty_roles/{roleId}": {
      "schema": "#/backend/entities/DutyRole",
      "description": "Available media functions."
    },
    "/duty_rosters/{dutyRosterId}": {
      "schema": "#/backend/entities/DutyRoster",
      "description": "Service schedules."
    },
    "/important_dates/{importantDateId}": {
      "schema": "#/backend/entities/ImportantDate",
      "description": "Calendar events."
    },
    "/feedback/{feedbackId}": {
      "schema": "#/backend/entities/Feedback",
      "description": "Team messages."
    }
  }
}
